<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RelativeOverlap, HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/_dlg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/dialog_button_background"
            android:clickable="true"
            android:focusable="true"
            android:text="取消"
            android:paddingLeft="@dimen/small"
            android:paddingRight="@dimen/small"
            android:paddingTop="@dimen/smaller"
            android:paddingBottom="@dimen/smaller"
            android:layout_marginStart="@dimen/small"
            android:layout_marginLeft="@dimen/small"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:textColor="@color/tint"
            android:textSize="@dimen/h3" />

        <TextView
            android:id="@+id/_dlg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dialog_button_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="@dimen/small"
            android:paddingRight="@dimen/small"
            android:paddingTop="@dimen/smaller"
            android:paddingBottom="@dimen/smaller"
            android:layout_marginRight="@dimen/small"
            android:layout_marginEnd="@dimen/small"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/h3" />

        <TextView
            android:id="@+id/_dlg_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_toEndOf="@id/_dlg_left"
            android:layout_toRightOf="@id/_dlg_left"
            android:layout_toStartOf="@id/_dlg_right"
            android:layout_toLeftOf="@id/_dlg_right"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text"
            android:textSize="@dimen/h3">

        </TextView>

    </RelativeLayout>

    <View
        android:id="@+id/_dlg_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider" />

    <FrameLayout
        android:id="@+id/_dlg_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/content">

    </FrameLayout>

</LinearLayout>
